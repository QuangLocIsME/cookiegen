{
  "manifest_version": 3,
  "name": "Cookie Generator",
  "version": "1.0",
  "description": "Tạo và quản lý cookies cho nhiều URL",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "scripting",
    "downloads",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}